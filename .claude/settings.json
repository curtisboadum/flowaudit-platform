{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "WebSearch",
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git stash:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git remote:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "Bash(gh repo view:*)",
      "Bash(node --version:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(echo:*)",
      "WebFetch(domain:instantdb.com)",
      "WebFetch(domain:www.instantdb.com)",
      "WebFetch(domain:nextjs.org)",
      "WebFetch(domain:openclaw.ai)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:tailwindcss.com)",
      "WebFetch(domain:ui.shadcn.com)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(sudo:*)",
      "Bash(eval:*)",
      "Bash(curl * | sh:*)",
      "Bash(curl * | bash:*)",
      "Bash(wget * | sh:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/curtis/Documents/FlowAudit_/.claude/hooks/block-dangerous-ops.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/curtis/Documents/FlowAudit_/.claude/hooks/enforce-branch-policy.sh"
          },
          {
            "type": "command",
            "command": "bash /Users/curtis/Documents/FlowAudit_/.claude/hooks/validate-env-files.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/curtis/Documents/FlowAudit_/.claude/hooks/post-write-format.sh"
          },
          {
            "type": "command",
            "command": "bash /Users/curtis/Documents/FlowAudit_/.claude/hooks/post-write-typecheck.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Before finishing, verify: 1) All tasks from this session are complete or documented in docs/tracking/to-do_list.md. 2) docs/tracking/change_log.md is updated with changes made. 3) Any new learnings are captured in docs/tracking/insights.md. 4) Code compiles without errors. If anything is incomplete, continue working."
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/curtis/Documents/FlowAudit_/.claude/hooks/notify-permission.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/curtis/Documents/FlowAudit_/.claude/hooks/session-context-inject.sh"
          }
        ]
      }
    ]
  }
}
